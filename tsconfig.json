{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2017", "es7", "es6", "esnext",
      "dom", "dom.iterable"      
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    ".appveyor.yml"
  ],
  "include": [
    "src/*.tsx"
  ]
}
